	<key>1_SECOND</key>
	<string>1 segon</string>
	<key>N_SECONDS</key>
	<string>%i segons</string>

	<!-- The Typing and Read Receipt headings. -->
	<key>TYPING_HEADER</key>
	<string>Escrivint</string>
	<key>READ_HEADER</key>
	<string>Llegit</string>

